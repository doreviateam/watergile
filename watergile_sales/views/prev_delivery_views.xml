<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_prev_delivery_form" model="ir.ui.view">
        <field name="name">prev.delivery.order.form</field>
        <field name="model">prev.delivery.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_sale_order" 
                            string="Créer Commande" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="[('state', '!=', 'draft')]"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,sale,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sale_order" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-usd" 
                                invisible="[('sale_id', '=', False)]">
                            <field name="sale_id" string="Commande" widget="statinfo"/>
                        </button>
                        <button name="action_view_deliveries" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-truck">
                            <field name="delivery_count" string="Livraisons" widget="statinfo"/>
                        </button>
                        <button name="action_toggle_fullscreen" 
                                type="object"
                                class="oe_stat_button" 
                                icon="fa-expand">
                            <span class="o_stat_text">Vue<br/>étendue</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="partner_mandant_id"/>
                            <field name="partner_invoice_id"/>
                            <field name="date_order"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes de commande" name="order_lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="partner_delivery_id"/>
                                    <field name="delivery_address_id" 
                                           context="{'show_address': 1}" 
                                           options="{'always_reload': True}"
                                           domain="[('type', '=', 'delivery'), ('parent_id', '=', partner_delivery_id)]"/>
                                    <field name="date_delivery"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="total_price" sum="Total"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="partner_delivery_id"/>
                                            <field name="delivery_address_id" 
                                                   context="{'show_address': 1}" 
                                                   options="{'always_reload': True}"
                                                   domain="[('type', '=', 'delivery'), ('parent_id', '=', partner_delivery_id)]"/>
                                            <field name="date_delivery"/>
                                        </group>
                                        <group>
                                            <field name="quantity"/>
                                            <field name="unit_price"/>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="total_price"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="amount_total" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Autres informations" name="other_information">
                            <group>
                                <group string="Notes">
                                    <field name="note" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_prev_delivery_tree" model="ir.ui.view">
        <field name="name">prev.delivery.order.tree</field>
        <field name="model">prev.delivery.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="sale_id"/>
                <field name="delivery_count"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_prev_delivery_search" model="ir.ui.view">
        <field name="name">prev.delivery.order.search</field>
        <field name="model">prev.delivery.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="sale_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state','=','confirmed')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Client" name="partner" context="{'group_by':'partner_id'}"/>
                    <filter string="État" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_prev_delivery" model="ir.actions.act_window">
        <field name="name">Pré-SO</field>
        <field name="res_model">prev.delivery.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre programme de livraison
            </p>
        </field>
    </record>
</odoo>